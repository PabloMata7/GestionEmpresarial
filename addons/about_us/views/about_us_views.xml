<odoo>
  <data>
    <record id="view_team_tree" model="ir.ui.view">
        <field name="name">about.us.tree</field>
        <field name="model">about.us</field>
        <field name="arch" type="xml">
            <tree string="Listado del Equipo">
                <field name="name"/>
                <field name="role"/>
            </tree>
        </field>
    </record>

    <record id="view_team_form" model="ir.ui.view">
        <field name="name">about.us.form</field>
        <field name="model">about.us</field>
        <field name="arch" type="xml">
            <form string="Miembro del Equipo">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="role"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
  </data>
</odoo>