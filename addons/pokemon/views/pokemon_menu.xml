<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_pokemon_all" model="ir.actions.act_window">
        <field name="name">Pokédex Completa</field>
        <field name="res_model">pokemon</field> <field name="view_mode">tree,form,kanban</field> <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Tu Pokédex está vacía!
            </p>
            <p>Sal a la hierba alta y captura (crea) tu primera carta.</p>
        </field>
    </record>

    <record id="action_pokemon_high_value" model="ir.actions.act_window">
        <field name="name">Cartas de Alto Valor</field>
        <field name="res_model">pokemon</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sellValue', '>', 50)]</field> <field name="context">{'default_sellValue': 50}</field>
    </record>

    <record id="action_pokemon_by_set" model="ir.actions.act_window">
        <field name="name">Por Colección</field>
        <field name="res_model">pokemon</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'colection'}</field> </record>


    <menuitem id="menu_pokemon_root"
              name="Pokémon TCG"
              sequence="1"
              web_icon="pokemon,static/description/icon.png"/>


    <menuitem id="menu_pc_bill"
              name="Mi PC (Colección)"
              parent="menu_pokemon_root"
              sequence="10"/>

        <menuitem id="menu_pokedex_full"
                  name="Ver Todas"
                  parent="menu_pc_bill"
                  action="action_pokemon_all"
                  sequence="1"/>

        <menuitem id="menu_pokedex_sets"
                  name="Por Sets"
                  parent="menu_pc_bill"
                  action="action_pokemon_by_set"
                  sequence="2"/>


    <menuitem id="menu_market_center"
              name="Centro Pokémon (Ventas)"
              parent="menu_pokemon_root"
              sequence="20"/>

        <menuitem id="menu_high_value"
                  name="Joyas (>50$)"
                  parent="menu_market_center"
                  action="action_pokemon_high_value"
                  sequence="1"/>
                  
    <menuitem id="menu_config"
              name="Opciones"
              parent="menu_pokemon_root"
              sequence="99"/>
</odoo>