<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_carta_tree" model="ir.ui.view">
        <field name="name">carta.tree</field>
        <field name="model">carta</field>
        <field name="arch" type="xml">
            <tree string="Cartas de Lorcana">
                <field name="carta_id" optional="show"/>
                <field name="name"/>
                <field name="rarity" widget="badge" decoration-info="rarity == 'Rare'"/>
                <field name="grade" optional="hide"/>
                
                <field name="marketValue" string="Mercado ($)"/>
                <field name="sellValue" string="Venta ($)" decoration-bf="1"/>
            </tree>
        </field>
    </record>
    <record id="view_carta_form" model="ir.ui.view">
        <field name="name">carta.form</field>
        <field name="model">carta</field>
        <field name="arch" type="xml">
            <form string="Carta de Lorcana">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="carta_id"/>
                            <field name="colection"/>
                            <field name="rarity"/>
                            <field name="grade"/>
                        </group>

                        <group string="Precios">
                            <label for="marketValue"/>
                            <div class="o_row">
                                <field name="marketValue"/>
                                <span>$</span> </div>

                            <label for="sellValue"/>
                            <div class="o_row">
                                <field name="sellValue" style="font-weight: bold; font-size: 1.2em;"/>
                                <span style="font-weight: bold; font-size: 1.2em;">$</span>
                            </div>
                        </group>
                    </group>

                    <notebook>
                        <page string="DescripciÃ³n">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
