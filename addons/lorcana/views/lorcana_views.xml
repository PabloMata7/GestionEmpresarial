<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <!-- vamos a definir la vista (Tree) -->
    <record id="view_cartas_tree" model="ir.ui.view">
        <field name ="name">carta.tree</field>
        <field name ="model">carta</field>
        <field name ="arch" type= "xml">
            <tree>
                <field name ="name"/>
            </tree>
        
        </field>
    </record>

    <!-- vamos a definir la vista formulario(Form) -->
    <record id="view_cartas_form" model="ir.ui.view">
        <field name ="name">carta.form</field>
        <field name ="model">carta</field>
        <field name ="arch" type= "xml">
            <form>
                <sheet>
                    <group>
                        <field name ="name"/>              
                    </group>

                    <group>
                        <field name = "description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>