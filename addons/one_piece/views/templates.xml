<odoo>
    <template id="web_one_piece_list" name="Listado de Cartas">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row">
                    <t t-foreach="cartas" t-as="carta">
                        <div class="col-md-3 mb-4">
                            <div class="card shadow-sm" style="border: 2px solid #000000; border-radius: 15px; overflow: hidden; min-height: 450px;">
                                
                                <div t-if="carta.image" style="height: 300px; overflow: hidden; background-color: #ffffff;">
                                    <img t-att-src="image_data_uri(carta.image)" class="card-img-top" style="height: 100%; width: 100%; object-fit: contain;"/>
                                </div>
                                <div t-else="" style="height: 300px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                    <span style="color: #000000;">Sin imagen</span>
                                </div>
                                
                                <div class="card-body text-center" style="background-color: #ffffff; border-top: 1px solid #000000;">
                                    <small style="color: #000000; font-weight: bold;">ID: <t t-esc="carta.card_id"/></small>

                                    <h5 class="card-title" style="color: #000000; margin-top: 5px; font-weight: bold;">
                                        <t t-esc="carta.name"/>
                                    </h5>

                                    <div class="card-text">
                                        <span class="badge" style="background-color: #000000; color: #ffffff; padding: 5px 10px; border-radius: 5px;">
                                            <t t-esc="carta.rarity"/>
                                        </span>
                                        <div style="color: #000000; font-size: 0.9em; margin-top: 8px; font-weight: 500;">
                                            <t t-esc="carta.franchise"/>
                                        </div>
                                    </div>

                                    <p style="font-weight: 900; color: #000000; font-size: 1.3em; margin-top: 15px; margin-bottom: 0;">
                                        <t t-esc="carta.sellValue"/> â‚¬
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>