<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vamos a definir la vista (Tree)-->
    <record id="view_one_piece_tree" model="ir.ui.view">
        <field name="name">carta.carta.tree</field>
        <field name="model">carta.carta</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
        
    </record>

    <!-- Vamos a definir la vista formulario (Form)-->
     <record id="view_one_piece_form" model= "ir.ui.view">
        <field name="name">carta.carta.form</field>
        <field name="model">carta.carta</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>
</odoo>